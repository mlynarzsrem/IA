@model IEnumerable<WebApplication1.Models.Genre>
<table class="table" id="genres">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.GenreId }) |
                @Html.ActionLink("Details", "Details", new { id = item.GenreId }) |
                @Ajax.ActionLink("Delete", "Delete", new { id = item.GenreId }, new AjaxOptions()
                {
                    HttpMethod = "Delete",
                    UpdateTargetId = "genres"

                })

            </td>
        </tr>
    }

</table>
