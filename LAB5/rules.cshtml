<!DOCTYPE html>
<html>
    <head>
        <title></title>
        @{
            var rules = (List<string>)Session["rules"];
            if (rules == null)
            {
                rules = new List<string>();
            }
            var name = Request.Form["name"];
            if (name != null) {
                rules.Add(name);
                Session["rules"] = rules;
                Response.Redirect("~/rules.cshtml");
            }
            Session["rules"]=rules;
        }
    </head>
    <body>
        <form method="post">
            name:<br>
            <input type="text" name="name"><br>
            submit:<br>
            <input type="submit">
        </form>
        <ol>
        @for (int i = 0; i < rules.Count(); i++)
        {
            <li>@rules[i]</li>
        }
        </ol>
    </body>
</html>
